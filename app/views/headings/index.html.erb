
<%= render 'breadcrumb' %>

<h2>Index of heading <span class="hot-cinnamon">terms</span> in the collection</h2>
<hr>

<%= debug params %>

<p>
    <%= link_to "Compose a new heading", new_heading_path %>
</p>
<div id="content" class=".clearfix">

    <div class="row">
        <div class="col-md-6" style="border-right:1px">
<ul class="list-group" style="padding-top: 10px">
    <%
        col1 = @all_headings[0,@all_headings.length/2]
        col2 = @all_headings[@all_headings.length/2,@all_headings.length]

        col1.each do |heading|
    %>
    <%= render partial: heading, layout: "headings/heading_group_layout" %>
    <%
        end
    %>
</ul>
        </div>
        <div class="col-md-6" style="border-right:1px">
<ul class="list-group" style="padding-top: 10px">
    <%
        col2.each do |heading|
    %>
    <%= render partial: heading, layout: "headings/heading_group_layout" %>
    <%
        end
    %>
</ul>
        </div>
    </div>

</div>
