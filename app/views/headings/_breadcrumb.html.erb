<%- content_for(:breadcrumb) do -%>
    <%
        if params['action'] == 'index' or params['action'] == 'the_index'
            # Index Index is dumb
            prefix = 'The'
        elsif params['action'] == 'from_wiki'
            prefix = 'Edit'
        else
            prefix = params['action'].capitalize
        end
    %>
    <li class="active"><%= "#{prefix} Index" %></li>
<%- end -%>
