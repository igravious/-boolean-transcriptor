<%- content_for(:breadcrumb) do -%>
    <%= render 'items/breadcrumb' %>
    <%
        count = @item.scan.length
        crumb = "#{@item.fa_seq} ……… #{pluralize(count, 'scan')}"
    %>
    <% if params['controller'] == 'scans' %>
        <li class="active"><%= crumb %></li>
    <% else %>
        <!-- prolly you can just pass params to _path ? -->
        <li><a href="<%= item_scans_path(@item.id, aspect: params['aspect'], q: params['q']) %>"><%= crumb %></a></li>
    <% end %>
<%- end -%>
