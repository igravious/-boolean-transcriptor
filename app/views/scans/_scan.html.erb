<%
    # TODO get first scan
    thumb_name = 'thumbs/'+scan.file_name
    alt = ''
    if defined? scan_counter
        alt = "scan #{scan.minor_seq}"
        # for the moment, also need a badge?
    else
        if defined? item
            count = item.scans.length
            alt = "#{pluralize(count, 'scan')}"
        else
            alt = "scan #{scan.minor_seq}"
        end
    end
    title = alt
%>

<% if defined? lazy_load %>
	<div style="width: 100px; height:100px; display: inline;">
    <img style="display: inline;" class="lazy" data-original="<%= image_path thumb_name %>" alt="<%= alt %>" title="<%= title %>" width="100px" height="100px">
	</div>
<% else %>
    <%= image_tag(thumb_name, alt: alt, title: title) %>
<% end %>
